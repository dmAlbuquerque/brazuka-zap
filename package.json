  },
  "keywords": [
    "whatsapp",
    "whatsapp-library",
    "whatsapp-sender",
    "whatsapp-send-message",
    "whatsapp-api",
    "free-whatsapp-api",
    "free-api",
    "venom-bot",
    "whatsapp-business",
    "send-message",
    "brazuka",
    "brasil",
    "brazil"
  ],
  "author": "Daniel Albuquerque",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/dmAlbuquerque/brazuka-zap/issues"
  },
  "homepage": "https://github.com/dmAlbuquerque/brazuka-zap#readme",
  "dependencies": {
    "brazuka-formatter": "^0.0.1",
    "spinnies": "^0.5.1",
    "venom-bot": "^3.0.0"
  },
  "devDependencies": {
    "@types/node": "^16.3.1",
    "nodemon": "^2.0.12",
    "ts-node": "^10.0.1",
    "typescript": "^4.3.5"
  }
}