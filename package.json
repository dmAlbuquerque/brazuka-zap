{
  "name": "brazuka-zap",
  "version": "0.0.11",
  "description": "Provides an API to send bulk messages via WhatsApp based on Venom Bot",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc --declaration",
    "dev": "nodemon --watch \"src//\" --exec \"ts-node src/sample.ts\" -e ts",
